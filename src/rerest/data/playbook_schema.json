{
  "$schema": "http://json-schema.org/draft-04/schema#",
  "id": "http://jsonschema.net#",
  "type": "object",
  "additionalProperties": false,

  "definitions": {
    "notify": {
      "type": "object",
      "properties": {
        "started": {"$ref": "#/definitions/notify_items"},
        "completed": {"$ref": "#/definitions/notify_items"},
        "failed": {"$ref": "#/definitions/notify_items"}
      }
    },

    "notify_items": {
      "type": "object",
      "additionalProperties": {
        "$ref": "#/definitions/notify_definitions"
      }
    },

    "notify_definition": {
      "type": "object",
      "additionalProperties": {
        "type": "array",
        "items": {
          "type": "string",
          "minItems": 1
        }
      }
    },

    "group": {
      "id": "#group",
      "type": "string"
    },
    "name": {
      "id": "#name",
      "type": "string"
    },
    "description": {
      "id": "#description",
      "type": "string"
    },
    "step_types": {
      "anyOf": [
        {"$ref": "#/definitions/step_string"},
        {"$ref": "#/definitions/step_object"}
      ]
    },
    "step_string": {
      "type": "string",
        "pattern": "^[\\w]+:{1}[\\w]+$"
    },
    "step_object": {
      "type": "object",
      "patternProperties": {
        "^[\\w]+:{1}[\\w]+$": {
          "type": "object"
        }
      },
      "properties": {
          "notify": {"$ref": "#/definitions/notify"}
      }
    },
    "steps": {
      "id": "#steps",
      "type": "array",
      "minItems": 1,
      "items": {"$ref": "#/definitions/step_types"}
    },
    "hosts": {
      "id": "#hosts",
      "type": "array",
      "minItems": 1,
      "items": {
        "id": "#0",
        "type": "string"
      }
    },
    "execution": {
      "id": "#execution",
      "type": "array",
      "items": {
        "id": "#0",
        "type": "object",
        "additionalProperties": false,
        "required": ["hosts", "steps", "description"],
        "properties": {
          "hosts": {"$ref": "#/definitions/hosts"},
          "steps": {"$ref": "#/definitions/steps"},
          "preflight": {"$ref": "#/definitions/steps"},
          "description": {"$ref": "#/definitions/description"}
        }
      }
    }
  },

  "properties": {
    "execution": {"$ref": "#/definitions/execution"},
    "group": {"$ref": "#/definitions/group"},
    "name": {"$ref": "#/definitions/name"}
  },

  "required": ["execution", "name", "group"]
}
